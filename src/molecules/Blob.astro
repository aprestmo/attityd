  svg {
    --blend-mode: multiply;
    inline-size: clamp(18rem, 60vw, 32rem);
    inset-block-start: 50%;
    inset-inline-start: 50%;
    mix-blend-mode: var(--blend-mode);
    opacity: 0.2;
    position: fixed;
    transform: translate(-50%, -50%);
    z-index: -1;
  }

  @media (prefers-color-scheme: dark) {
    svg {
      --blend-mode: difference;
    }
  }
</style>
